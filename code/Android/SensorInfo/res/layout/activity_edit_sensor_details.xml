<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/outerLayoutForEdit"
    android:orientation="vertical" >
    
     <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
     
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/innerLayoutthreeForEdit"
        android:baselineAligned="false"
        android:orientation="horizontal" >

     <EditText
        android:id="@+id/edit_packageidupdate"
        android:selectAllOnFocus="true"
        android:inputType="text"
        android:maxLength="30"
        android:singleLine="true"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/edit_packageidupdate" />

     </LinearLayout>
     
     <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/innerLayoutfourForEdit"
        android:baselineAligned="false"
        android:orientation="horizontal" >
     
     <Button
        android:id="@+id/updateSensorToList"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/button_updateSensorToList" 
        android:onClick="UpdateSensorToList" />
    
</LinearLayout>
</LinearLayout>

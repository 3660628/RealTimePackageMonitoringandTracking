<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <CheckBoxPreference
        android:defaultValue="true"
        android:summary="@string/pref_description_turn_on_off_shock"
        android:title="@string/pref_title_turn_on_off_shock"
        android:key="turn_on_off_shock" />
        
     <EditTextPreference
        android:capitalize="words"
        android:dependency="turn_on_off_shock"
        android:defaultValue="@string/pref_default_shock_threshold"
        android:inputType="numberDecimal"
        android:key="set_shock_threshold"
        android:maxLength="10"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_set_shock_threshold" />    

</PreferenceScreen>
